    <div class="container">
        <div class="row" style="overflow: hidden;">
            <div class="six columns">
                <h3>
                    Made with 🐶 in Cambridge, MA.
                </h3>
            </div>
            <div class="six columns">
                <div class="right">
                    <h3>
                        <%= mail_to "team@project501.com", "Contact Us", target: "_blank" %>
                    </h3>
                </div>
            </div>
        </div>
    </div>
</div>
