<div class="container nav">
    <div class="row">
        <div class="twelve columns navbar">

            <% if user_signed_in? %>
                <%= link_to image_tag("logo1.png", class: "logo"), current_user, class: "centered-logo" %>
                <div class="right mobile-hidden">
                    <%= link_to "Projects", projects_path, class: "animated-underline nav-link" %>
                    <%= link_to "Post Project", new_project_path, class: "button-primary"%>
                    <%= link_to image_tag("inbox.svg", class: "inbox"), conversations_path %>
                    <% if current_user.avatar_url? %>
                        <%= link_to image_tag(current_user.avatar_url, class: "avatar"), current_user %>
                    <% else %>
                        <%= link_to image_tag("avatar.svg"), current_user %>
                    <% end %>
                </div>

            <% else %>
                <%= link_to image_tag("logo1.png", class: "logo"), root_path %>
                <div class="right">
                    <%= link_to "Login", new_user_session_path, class: "animated-underline nav-link"%>
                </div>
            <% end %>
        </div>
    </div>
</div>
