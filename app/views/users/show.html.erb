<%= render 'shared/navbar' %>

<div class="section cards">
    <div class="container">
        <div class="row">
            <%= render 'userProfileCard' %>
        </div>

        <div class="row">

            <% @user.roles.each do |role| %>
                <% if role.status == "Volunteer" %>
                    <%= render 'projectCard', role: role %>
                <% elsif role.status == "Applicant" %>
                    <%= render 'projectCard', role: role %>
                <% elsif role.status == "Owner" %>
                    <%= render 'projectCard', role: role %>
                <% end %>
            <% end %>

        </div>
    </div>
</div>
