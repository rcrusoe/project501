<%= render 'shared/navbar' %>

<div class="section cards">
  <div class="container">
    <div class="row">
      <% @users.each do |user| %>
        <% if user.approved == false %>
          <div class="two-cards columns">
            <div class="card dark">
              <div class="content">
                <h3 class="clamped-text one-line">
                  <%= link_to user.name, user %>
                </h3>
                <div class="divider"></div>
                <p class="clamped-text four-lines no-bottom-margin">
                  <%= user.tagline %>
                </p>
                <%= form_for @personal_message do |f| %>
                  <%= hidden_field_tag 'receiver_id', user.id %>
                  <%= hidden_field_tag 'project_id', 1 %>

                  <%= f.text_area :body, placeholder: "Contact the user..." %>

                  <div class="actions application-button">
                    <%= f.submit "Send Message"%>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
